<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/containerManagerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/soccerImg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="@string/desc_logo" />

        <TextView
            android:id="@+id/soccerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_user"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/soccerCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_country"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/soccerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_position"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/soccerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_points"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/label_title_winners"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ratingbar"
            android:gravity="center">

            <RatingBar
                android:id="@+id/soccerRatingWinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/google_app_yellow"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5"
                android:theme="@style/app_RatingBar" />

        </LinearLayout>

        <TextView
            android:id="@+id/soccerRatingWinnerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_rank_winner"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/label_title_disputed"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ratingbar"
            android:gravity="center">

            <RatingBar
                android:id="@+id/soccerRatingDisputed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/google_app_yellow"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5"
                android:theme="@style/app_RatingBar" />

        </LinearLayout>

        <TextView
            android:id="@+id/soccerRatingDisputedPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/hint_rank_disputed"
            android:textColor="@color/ColorSupremeWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>